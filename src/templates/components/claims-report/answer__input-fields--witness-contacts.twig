{% include 'answer-summary.twig' %}

<div class="claims-report__answer">
  
  <form id="{{ id }}-form" class="claims-report__answer__form" method="post" action="">
    
    <div class="claims-report__answer__option">
    	<!-- Reg. nr. -->
    	<div class="answer__option answer__option--input">
    		<label for="contact_regnr">Reg. nr.:</label>
    		<input type="text" id="contact_regnr" name="contact_regnr" {{ answer.validation }} value="" />
    		<span class="error">Skal udfyldes</span>
    	</div>
    </div>
    
    <div class="claims-report__answer__option">
    	<!-- Name -->
    	<div class="answer__option answer__option--input">
    		<label for="contact_name">Navn:</label>
    		<input type="text" id="contact_name" name="name" {{ answer.validation }} value="" />
    		<span class="error">Navn skal udfyldes</span>
    	</div>
    </div>
    
    <div class="claims-report__answer__option">
    	<!-- Adresse -->
    	<div class="answer__option answer__option--input">
    		<label for="contact_address">Adresse:</label>
    		<input type="text" id="contact_address" name="contact_address" {{ answer.validation }} value="" />
    		<span class="error">Skal udfyldes</span>
    	</div>
    </div>
    
    <div class="claims-report__answer__option">
    	<!-- Postnr. -->
    	<div class="answer__option answer__option--input">
    		<label for="contact_postno">Postnr:</label>
    		<input type="text" id="contact_postno" name="contact_postno" {{ answer.validation }} value="" />
    		<span class="error">Skal udfyldes</span>
    	</div>
    </div>
    
    <div class="claims-report__answer__option">
    	<!-- By -->
    	<div class="answer__option answer__option--input">
    		<label for="contact_city">By:</label>
    		<input type="text" id="contact_city" name="contact_city" {{ answer.validation }} value="" />
    		<span class="error">Skal udfyldes</span>
    	</div>
    </div>
    
    <div class="claims-report__answer__option">
    	<!-- Phone -->
    	<div class="answer__option answer__option--input">
    		<label for="contact_phone">Telefonnummer:</label>
    		<input type="phone" id="contact_phone" name="name" {{ answer.validation }} value="" />
    		<span class="error">Telefonnummer skal udfyldes</span>
    	</div>
    </div>
    
    <div class="claims-report__answer__option">
    	<!-- Email -->
    	<div class="answer__option answer__option--input">
    		<label for="contact_email">E-mail:</label>
    		<input type="email" id="contact_email" name="email" {{ answer.validation }} />
    		<span class="error">Indtast venlig en gyldig e-mail </span>				
    	</div>
    </div>
    
    {% include 'submit-question.twig' %}
    
  </form>
  
</div>